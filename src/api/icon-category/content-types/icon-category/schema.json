{
  "kind": "collectionType",
  "collectionName": "icon_categories",
  "info": {
    "singularName": "icon-category",
    "pluralName": "icon-categories",
    "displayName": "Icon Category",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "Category": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "string",
      "required": true
    },
    "hexColor": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "string",
      "regex": "^#(?:[0-9a-fA-F]{3}){1,2}$",
      "default": "#ffffff",
      "required": true
    },
    "icon": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "required": true
    }
  }
}
